// imports.menu: ./_menu
<%
var level = level || 1;
var menus = menus || [];
%>
<ul class="lv-<%=level%>">
	<% for (const menu of menus) { %>
		<li>
			<a href="<%=menu.url%>"><%=menu.name%></a>
			<% if (menu.children) { %>
				<%-imports.menu({menus: menu.children, level: level + 1})%>
			<% } %>
		</li>
	<% } %>
</ul>
